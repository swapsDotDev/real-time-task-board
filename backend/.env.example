# Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
# For local MongoDB: mongodb://localhost:27017/taskboard
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/taskboard
MONGODB_URI=mongodb://localhost:27017/taskboard

# JWT Authentication
# IMPORTANT: Generate a strong, unique secret for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Admin User Creation (Optional - for automated deployment)
# ADMIN_NAME=Your Name
# ADMIN_EMAIL=admin@yourcompany.com  
# ADMIN_PASSWORD=YourSecurePassword123

# Optional: Email Configuration (for password reset, etc.)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
JWT_EXPIRE=7d

# CORS
FRONTEND_URL=http://localhost:5173
